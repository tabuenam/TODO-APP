<p id="notice"><%= notice %></p>

<div class="container">
<h1>Welcome to your To-Do app, <%= current_user.username %>!</h1>
</div>

<div class="container">
  <h1>Tasks</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>
  
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <!-- Is the show line needed? -->
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>

<%= link_to 'New Task', new_task_path %>
</div>


<div class="container">
	<h2>Want to leave?</h2>
<%= button_to "Logout", '/logout', method: :delete%>
</div>

