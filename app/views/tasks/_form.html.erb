<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  
  <div class="field">
    <%= form.label :priority %>
    <%= form.select :priority, [['', -1],['Low', 0], ['Medium', 1], ['High', 2]]%>
  </div>
  
  <div class="field">
    <%= form.label :category %>
    <%= collection_select(:task, :category_id, Category.all, :id, :name, include_blank: true, prompt: false) %>
  </div>
  
  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
